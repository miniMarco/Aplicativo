@model IEnumerable<Modelo.Usuario>

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Usuários
    </div>
    <div class="panel-body">
        @if (Model == null || Model.Count() == 0)
        {
            <div align="center">Sem usuários</div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Sobrenome</th>
                        <th>Aniversário</th>
                        <th>Email</th>
                        <th>Foto?</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var usuario in Model)
                        {
                            <td>@usuario.Nome</td>
                            <td>@usuario.Sobrenome</td>
                            <td>@usuario.Aniversario</td>
                            <td>@usuario.Email</td>

                            if (usuario.Foto == null) { <td> Não </td> }
                            else { <td>Sim</td> }
                        }
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>


@section ScriptPage
{
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liUsuarios').addClass("active");
        });
</script>  
}
