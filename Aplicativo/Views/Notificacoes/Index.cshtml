@model IEnumerable<Modelo.Notificacao>

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Eventos Recentes
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Modelo.Notificacao notificacao in Model)
                {
                    <tr>
                        <td>
                            <fieldset>
                                <legend>@notificacao.Nome</legend>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td>@notificacao.Descricao | </td>
                                            <td>| @notificacao.DataInicio | </td>
                                            @if (notificacao.Aniversario)
                                            {
                                            <td>| @notificacao.DataFim | </td>
                                            <td> <div>| É aniversário</div></td>
                                            }
                                            else
                                            {
                                                <td>| @notificacao.DataFim </td>
                                                <td> </td>
                                            }
                                            
                                        </tr>
                                    </tbody>
                                </table>
                            </fieldset>
                            <br />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Create", "Create", "Notificacoes", new { @class = "btn btn-default" })
    </div>
</div>